doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")

    - var pageTitle = title ?  `${title} | NateEagle.com` : "NateEagle.com"
    title= pageTitle
    meta(property="og:title" content=pageTitle)

    - var description = description ? description : "Notes on cocktails, coding, and absolutely nothing else."
    meta(name="description" content=description)
    meta(name="og:description" content=description)

    link(rel='stylesheet', href='/main.css')
    link(rel="alternate" type="application/atom+xml" href="/atom.xml" title="NateEagle.com Atom feed")
  body
    header
      h1
        if link === '/'
          b nate
          b eagle
          b .com
        else
          a(href='/')
            b nate
            b eagle
            b .com

    section.content
      block content

    footer
      .container
        .copyright
          b.copy &copy;
          | #{new Date().getFullYear()}
          =" "
          a(href=`mailto:${author.email}`)= author.name

        ul.links 
          li: a(href='/about.html') About
          li: a(href='/colophon.html') Colophon
          li: a(href='/atom.xml') Feed
