extends layout.pug

block content
	if title && !recipe
		h1= title

	.info
		time= date.format('MMMM D, YYYY')
		if tags
			ul.tags
				each tag in tags
					li: a(href=`/tag/${tag}/`)= tag

	if recipe
		section.recipe
			h2= recipe.title
			ul
				for ingredient in recipe.ingredients
					li= ingredient
			if recipe.directions
				p.directions= recipe.directions


	section!= body

	a.home(href="/") Home
